@model IEnumerable<MVCGridProject.Models.Product>
@using NonFactors.Mvc.Grid;

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Id).Titled("ID");
        columns.Add(model => model.Name).Titled("Name").Sortable(GridSortOrder.Desc);
        columns.Add(model => model.Category).Titled("Category");
        columns.Add(model => model.Price).Titled("Price").Formatted("Â£{0:N2}");
        columns.Add(model => model.Stock).Titled("Stock");
        columns.Add(model => model.CreatedDate).Titled("Created Date").Formatted("{0:d}");
        columns.Add(model => model.IsAvailable).Titled("Available");
    })
    .Using(GridFilterMode.Header)
    .Empty("No data found")
    .Filterable(GridFilterCase.Lower)
    .Sortable()
    .Pageable(pager =>
    {
        pager.PageSizes = new Dictionary<Int32, String> {  { 5, "5" }, { 10, "10" }, { 20, "20" }, { 50, "50" } };
        pager.ShowPageSizes = true;
        pager.CurrentPage = 1;
        pager.RowsPerPage = 5;
    })
)