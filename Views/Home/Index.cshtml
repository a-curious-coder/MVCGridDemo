@model MVCGridProject.Models.IndexViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mx-auto px-4 py-8">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">@Model.Title</h1>
        <p class="text-xl text-gray-600">@Model.Description</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var gridType in Model.GridTypes)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:scale-105">
                <div class="p-6">
                    <h2 class="text-2xl font-semibold text-gray-800 mb-3">@gridType.Name</h2>
                    <p class="text-gray-600 mb-4">@gridType.Description</p>
                    <a href="@gridType.Url" class="inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 transition-colors duration-300">View Example</a>
                </div>
            </div>
        }
    </div>
</div>
